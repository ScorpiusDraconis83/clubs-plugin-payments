{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "module": "esnext",
    "lib": ["ESNext"],
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "verbatimModuleSyntax": false,
    "types": ["node", "astro/client"]
  },
  "include": [
    "src/**/*",
    ".preview/**/*",
    "rollup.config.js",
    "tailwind.config.mjs",
    "vitest.config.ts"
  ]
}
